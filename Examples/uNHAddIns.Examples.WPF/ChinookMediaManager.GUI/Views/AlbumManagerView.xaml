<Window x:Class="ChinookMediaManager.GUI.Views.AlbumManagerView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cal="clr-namespace:Caliburn.PresentationFramework;assembly=Caliburn.PresentationFramework"
    Height="300" Width="300" 
    cal:Message.Attach="[Event Loaded] = [Action LoadData]">
    <Grid>
        <DockPanel>
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" >
                <Button>
                    Edit Albums</Button>
                <Button>Close</Button>
            </StackPanel>
            <ListBox Name="ArtistsList" ItemsSource="{Binding Albums}" DisplayMemberPath="Title" DockPanel.Dock="Top" >
            </ListBox>
        </DockPanel>
    </Grid>
</Window>
