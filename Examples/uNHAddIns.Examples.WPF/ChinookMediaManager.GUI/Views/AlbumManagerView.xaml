<Window x:Class="ChinookMediaManager.GUI.Views.AlbumManagerView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cal="clr-namespace:Caliburn.PresentationFramework;assembly=Caliburn.PresentationFramework"
    xmlns:ApplicationModel="clr-namespace:Caliburn.PresentationFramework.ApplicationModel;assembly=Caliburn.PresentationFramework"
    Height="298" Width="256" 
    cal:Message.Attach="[Event Loaded] = [Action LoadData]">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <DockPanel Grid.Column="0" >
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" >
                <Button cal:Message.Attach="LaunchEdit(AlbumsList.SelectedItem:OneWay)">Edit Albums</Button>
                <Button>Close</Button>
            </StackPanel>
            <ListBox Name="AlbumsList" ItemsSource="{Binding Albums}" DisplayMemberPath="Title" DockPanel.Dock="Top" >
            </ListBox>
        </DockPanel>
        <StackPanel>
            <ContentControl ApplicationModel:View.Model="{Binding CurrentPresenter}">
            </ContentControl>
        </StackPanel>
    </Grid>
</Window>
