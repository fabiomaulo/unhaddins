<Window x:Class="ChinookMediaManager.GUI.Views.BrowseArtistView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Pick an artist" Height="300" Width="300">

    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition  Height="20" />
			<RowDefinition Height="*" />
			<RowDefinition Height="20" />
		</Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal" Grid.Row="0" >
                <Button Command="{Binding LoadListCommand}">Load Artists</Button>
                <Button Command="{Binding EditAlbumsCommand}">Edit Albums</Button>
            </StackPanel>
            <ListBox Name="ArtistsList" ItemsSource="{Binding Artists}" Grid.Row="1"
                     DisplayMemberPath="Name" SelectedItem="{Binding SelectedArtist}" >
            </ListBox>
			<TextBlock Text="{Binding Status}" Grid.Row="2"  /> 
     </Grid>
</Window>
